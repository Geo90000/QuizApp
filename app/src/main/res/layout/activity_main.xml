<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttotalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="370dp"
            android:autoSizeTextType="uniform"
            android:text="First Question"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMenuSpiel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HauptMenu"
            android:textColor="#000"
            android:textStyle="bold"
            android:backgroundTint="#0297FA"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Score : 1570 point"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="562dp"
            android:layout_height="150dp"
            android:src="@drawable/moderator2"
            android:layout_marginEnd="130dp"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="0:30"
            android:drawableTop="@drawable/ic_baseline_timer_24"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:background="@drawable/question_container_background"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="what is android ?"
            android:autoSizeTextType="uniform"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/radio_button"
                    android:layout_width="460dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/button_background_color_correct"
                    android:button="@null"
                    android:freezesText="true"
                    android:padding="12sp"
                    android:text="@string/button.1"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/radio_button2"
                    android:layout_width="460dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/button_background_color_wrong"
                    android:button="@null"
                    android:freezesText="true"
                    android:padding="12sp"
                    android:text="Smart phone"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />


                <!--                <RadioButton-->
<!--                     />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/radio_button3"
                    android:layout_width="460dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/button_background_color_wrong"
                    android:button="@null"
                    android:freezesText="true"
                    android:padding="12sp"
                    android:text="Black OS"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/radio_button4"
                    android:layout_width="460dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/button_background_color_wrong"
                    android:button="@null"
                    android:freezesText="true"
                    android:padding="12sp"
                    android:text="Random Access Memory"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25dp" />
            </LinearLayout>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>